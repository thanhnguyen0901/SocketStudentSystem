<Project>
  <!--
    Solution-level build properties applied to every project automatically.
    Individual projects may override these values in their own .csproj files.
  -->
  <PropertyGroup>
    <!-- Use the latest C# language features available for the chosen TFM -->
    <LangVersion>latest</LangVersion>

    <!-- Nullable reference-type analysis: treat missing annotations as warnings -->
    <Nullable>enable</Nullable>

    <!-- Enable top-level 'global using' directives generated by the SDK -->
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Keep the build output clean; promote warnings to errors when needed per-project -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>
</Project>
