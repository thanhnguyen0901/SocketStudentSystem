<UserControl
    x:Class="StudentClient.Wpf.Views.ConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="580"
    mc:Ignorable="d">

    <Border Padding="24">
        <StackPanel>

            <!--  Section heading  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Connect to Server" />

            <GroupBox Padding="8" Header="Server Address">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Host  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Host / IP:" />
                    <!--  x:Name="Host" binds to ViewModel.Host via Caliburn convention  -->
                    <TextBox
                        x:Name="Host"
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--  Port  -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Port:" />
                    <TextBox
                        x:Name="Port"
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--
                    Connect button â€” x:Name="Connect" triggers ViewModel.Connect()
                    Caliburn evaluates CanConnect to set IsEnabled.
                    -->
                    <Button
                        x:Name="Connect"
                        Grid.Row="4"
                        Grid.Column="1"
                        Padding="28,5"
                        HorizontalAlignment="Left"
                        Content="Connect" />

                    <!--  Status  -->
                    <TextBlock
                        x:Name="Status"
                        Grid.Row="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        FontStyle="Italic"
                        Foreground="DimGray"
                        TextWrapping="Wrap" />

                </Grid>
            </GroupBox>

        </StackPanel>
    </Border>
</UserControl>
