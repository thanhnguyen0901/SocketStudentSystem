<UserControl
    x:Class="StudentClient.Wpf.Views.StudentEntryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="460"
    d:DesignWidth="580"
    mc:Ignorable="d">

    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  heading  -->
                <RowDefinition Height="Auto" />
                <!--  input form  -->
                <RowDefinition Height="Auto" />
                <!--  query mode selector (Get All / Get By ID)  -->
                <RowDefinition Height="Auto" />
                <!--  buttons + status  -->
                <RowDefinition Height="*" />
                <!--  results DataGrid  -->
            </Grid.RowDefinitions>

            <!--  Heading  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Student Entry" />

            <!--  ── Input form ───────────────────────────────────────────  -->
            <GroupBox
                Grid.Row="1"
                Padding="8"
                Header="New Student">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Row 0: FullName + Math  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Full Name:" />
                    <TextBox
                        x:Name="FullName"
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Content="Math:" />
                    <TextBox
                        x:Name="Math"
                        Grid.Row="0"
                        Grid.Column="4"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--  Row 2: StudentId + Literature + English  -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Student ID:" />
                    <TextBox
                        x:Name="StudentId"
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Content="Lit / Eng:" />
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="4"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="Literature"
                            Width="70"
                            Height="26"
                            VerticalContentAlignment="Center" />
                        <TextBox
                            x:Name="English"
                            Width="70"
                            Height="26"
                            Margin="6,0,0,0"
                            VerticalContentAlignment="Center" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!--  ── Query Mode Selector ──────────────────────────────────  -->
            <!--  Row 2: choose between Get All and Get By Student ID.       -->
            <GroupBox
                Grid.Row="2"
                Margin="0,0,0,0"
                Padding="8,6"
                Header="Query Mode">
                <StackPanel Orientation="Horizontal">
                    <!--  RadioButton x:Name triggers Caliburn IsChecked → IsGetAllSelected  -->
                    <RadioButton
                        x:Name="IsGetAllSelected"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Content="Get All"
                        IsChecked="{Binding IsGetAllSelected, Mode=TwoWay}" />
                    <RadioButton
                        x:Name="IsGetByIdSelected"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Content="Get By Student ID"
                        IsChecked="{Binding IsGetByIdSelected, Mode=TwoWay}" />
                    <!--  Student ID filter input; enabled only when Get By ID is active  -->
                    <TextBox
                        x:Name="StudentIdFilter"
                        Width="140"
                        Height="26"
                        VerticalContentAlignment="Center"
                        IsEnabled="{Binding IsGetByIdSelected}"
                        ToolTip="Enter Student ID to filter" />
                </StackPanel>
            </GroupBox>

            <!--  ── Buttons + Status ─────────────────────────────────────  -->
            <Grid Grid.Row="3" Margin="0,8,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  AddStudent button — guard: CanAddStudent  -->
                <Button
                    x:Name="AddStudent"
                    Grid.Column="0"
                    Padding="20,5"
                    Content="Add Student" />

                <!--  GetResults button — guard: CanGetResults  -->
                <Button
                    x:Name="GetResults"
                    Grid.Column="2"
                    Padding="20,5"
                    Content="Get Results" />

                <!--  Status message  -->
                <TextBlock
                    x:Name="Status"
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    FontStyle="Italic"
                    Foreground="DimGray"
                    TextWrapping="Wrap" />
            </Grid>

            <!--  ── Results DataGrid ─────────────────────────────────────  -->
            <GroupBox
                Grid.Row="4"
                Padding="4"
                Header="Results">
                <!--
                x:Name="Results" binds to ViewModel.Results (ObservableCollection).
                AutoGenerateColumns="False" so only the assignment-required
                columns (FullName, StudentId, Average) are shown.
                -->
                <DataGrid
                    x:Name="Results"
                    AlternatingRowBackground="#F5F5F5"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding FullName}"
                            Header="Full Name" />
                        <DataGridTextColumn
                            Width="110"
                            Binding="{Binding StudentId}"
                            Header="Student ID" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Average, StringFormat=F2}"
                            Header="Average" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

        </Grid>
    </Border>
</UserControl>
