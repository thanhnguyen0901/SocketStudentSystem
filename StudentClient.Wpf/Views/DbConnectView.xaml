<UserControl
    x:Class="StudentClient.Wpf.Views.DbConnectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="580"
    mc:Ignorable="d">

    <Border Padding="24">
        <StackPanel>

            <!--  Section heading  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Connect to Database" />

            <GroupBox Padding="8" Header="SQL Server Credentials">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  SqlHost  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="SQL Host:" />
                    <TextBox
                        x:Name="SqlHost"
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--  SqlPort  -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="SQL Port:" />
                    <TextBox
                        x:Name="SqlPort"
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--  Username  -->
                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Username:" />
                    <TextBox
                        x:Name="Username"
                        Grid.Row="4"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--
                    Password — PasswordBox does not support two-way binding;
                    the code-behind forwards changes to ViewModel.Password.
                    -->
                    <Label
                        Grid.Row="6"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Password:" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Grid.Row="6"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center"
                        PasswordChanged="PasswordBox_PasswordChanged" />

                    <!--  Database  -->
                    <Label
                        Grid.Row="8"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Database:" />
                    <TextBox
                        x:Name="Database"
                        Grid.Row="8"
                        Grid.Column="1"
                        Height="26"
                        VerticalContentAlignment="Center" />

                    <!--  ConnectDb button — guard: CanConnectDb  -->
                    <Button
                        x:Name="ConnectDb"
                        Grid.Row="10"
                        Grid.Column="1"
                        Padding="28,5"
                        HorizontalAlignment="Left"
                        Content="Connect DB" />

                    <!--  Status  -->
                    <TextBlock
                        x:Name="Status"
                        Grid.Row="12"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        FontStyle="Italic"
                        Foreground="DimGray"
                        TextWrapping="Wrap" />

                </Grid>
            </GroupBox>

        </StackPanel>
    </Border>
</UserControl>
