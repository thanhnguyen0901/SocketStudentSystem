<Window
    x:Class="StudentClient.Wpf.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="620"
    Height="520"
    MinWidth="500"
    MinHeight="400"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--
    Caliburn.Micro convention: ContentControl x:Name="ActiveItem" is
    automatically bound to the Conductor's ActiveItem property.
    The framework locates the matching View for the active ViewModel by
    naming convention and renders it here.
    -->
    <ContentControl x:Name="ActiveItem" />

</Window>